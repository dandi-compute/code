params.executor = "slurm"

params.default_queue = 'mit_normal'
params.gpu_queue = 'mit_normal_gpu'

// Runtimes are defined by https://orcd-docs.mit.edu/running-jobs/overview/#partitions
params.max_normal_runtime_in_minutes = 12*60
params.max_gpu_runtime_in_minutes = 6*60

apptainer {
    enabled = true
    autoMounts = true
    apptainer.enabled = true
    apptainer.autoMounts = true
    platform = 'linux/amd64'
    envWhitelist = ['KACHERY_ZONE', 'KACHERY_API_KEY', 'NUMBA_CACHE_DIR', 'HDF5_USE_FILE_LOCKING', 'HF_HOME']
}

process {
    executor = 'slurm'
    queue = params.default_queue
    debug = true

    containerOptions = "--bind \$HOME:\$HOME,/orcd/data/dandi/001:/orcd/data/dandi/001"

    withName: job_dispatch {
        cpus=4
        memory='16 GB'
        time='1h'
    }
    withName: preprocessing {
        cpus=32
        memory='256 GB'
        time={ Math.min(max_duration_minutes.toFloat()*4, params.max_normal_runtime_in_minutes) + 'm' }
    }
    withName: spikesort_kilosort4 {
        cpus=16
        memory='64 GB'
        containerOptions='--nv'
        clusterOptions='--gres=gpu:1'
        queue=params.gpu_queue ?: params.default_queue
        time={ Math.min(max_duration_minutes.toFloat()*4, params.max_gpu_runtime_in_minutes) + 'm' }
    }
    withName: spikesort_kilosort25 {
        cpus=16
        memory='64 GB'
        containerOptions='--nv'
        clusterOptions='--gres=gpu:1'
        queue=params.gpu_queue ?: params.default_queue
        time={ Math.min(max_duration_minutes.toFloat()*4, params.max_gpu_runtime_in_minutes) + 'm' }
    }
    withName: spikesort_spykingcircus2 {
        cpus=16
        memory='64 GB'
        time={ Math.min(max_duration_minutes.toFloat()*4, params.max_normal_runtime_in_minutes) + 'm' }
    }
    withName: postprocessing {
        cpus=16
        memory='64 GB'
        time={ Math.min(max_duration_minutes.toFloat()*4, params.max_normal_runtime_in_minutes) + 'm' }
    }
    withName: curation {
        cpus=4
        memory='32 GB'
        time='50m'
    }
    withName: visualization {
        cpus=4
        memory='32 GB'
        time={ Math.min(max_duration_minutes.toFloat()*2, params.max_normal_runtime_in_minutes) + 'm' }
    }
    withName: results_collector {
        cpus=4
        memory='32 GB'
        time={
            def duration = max_duration_minutes.toFloat() > 10 ? max_duration_minutes.toFloat() : 10
            Math.min(duration, params.max_normal_runtime_in_minutes) + 'm'
        }
    }
    withName: quality_control {
        cpus=16
        memory='64 GB'
        time={ Math.min(max_duration_minutes.toFloat()*2, params.max_normal_runtime_in_minutes) + 'm' }
    }
    withName: quality_control_collector {
        cpus=4
        memory='32 GB'
        time={ max_duration_minutes.toFloat()/6 > 10 ? max_duration_minutes.toFloat()/6 + 'm' : '10m' }
    }
    withName: nwb_subject {
        cpus=4
        memory='32 GB'
        time={ max_duration_minutes.toFloat()/6 > 10 ? max_duration_minutes.toFloat()/6 + 'm' : '10m' }
    }
    withName: nwb_ecephys {
        cpus=16
        memory='64 GB'
        time={ Math.min(max_duration_minutes.toFloat()*2, params.max_normal_runtime_in_minutes) + 'm' }
    }
    withName: nwb_units {
        cpus=4
        memory='32 GB'
        time={ Math.min(max_duration_minutes.toFloat()*2, params.max_normal_runtime_in_minutes) + 'm' }
    }
}


dag {
    enabled = true
    file = RESULTS_PATH + '/nextflow/dag.html'
    overwrite = true
}

report {
    enabled = true
    file = RESULTS_PATH + '/nextflow/report.html'
    overwrite = true
}

timeline {
    enabled = true
    file = RESULTS_PATH + '/nextflow/timeline.html'
    overwrite = true
}

trace {
    enabled = true
    file = RESULTS_PATH + '/nextflow/trace.txt'
    overwrite = true
}
